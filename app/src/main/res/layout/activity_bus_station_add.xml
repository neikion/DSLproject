<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bus.ChooseBusStationActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bus_set_station_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/bus_station_search_et"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/Bus_Station_Add_hint"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:id="@+id/bus_go_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/BackButton"/>
            <Button
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:id="@+id/bus_station_search_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="검색"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>