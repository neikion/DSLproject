<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bus.BusSettingActivity">

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bus_setting_name"
        android:hint="알람 이름을 입력해주세요."
        android:textColor="@color/black"
        android:textSize="25sp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bus_setting_choose_bus"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="선택된 버스 없음"
        android:gravity="center"
        android:textStyle="bold"

        />
    <Button
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/bus_setting_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버스 선택"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bus_alarm_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cancle"/>
        <Button
            android:id="@+id/bus_alarm_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ok"/>

    </LinearLayout>


</LinearLayout>